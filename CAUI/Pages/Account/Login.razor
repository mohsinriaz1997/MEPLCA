@page "/login"
@layout AuthLayout

<div class="limiter login-page-deisgn" style="margin-top:-64px; overflow:hidden;">
        <div class="row">
            <div class="col-lg-7" style="padding:0;">
                <div class="container-login100" style="background-image: url('img/lg-bg-03.jpg');">
                    <div class="login-info-content">
                        <h2>Welcome to MEPL</h2>
                        <p>Manufacturer of auto parts for Japanese 2 and 4 wheelers OEM’S in Pakistan.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-5" style="padding:0;">
                <MudCard Elevation="5">
                <div class="wrap-login100" style="background: transparent !important;">
                <form class="login100-form validate-form">

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 color-white" style="color: #fff; font-weight: bold;">Login</p>
                    </div>
                    <div class="form-outline">
                        <MudTextField Margin="Margin.Dense" T="string" Counter="50" MaxLength="50" Immediate="true" @bind-Value="@oModel.UserCode" Label="Username" HelperTextOnFocus="true" Variant="Variant.Text" />
                    </div>
                    <div class="form-outline">
                        <MudTextField Margin="Margin.Dense" T="string" Counter="30" MaxLength="30" Immediate="true" @bind-Value="@oModel.Password" InputType="InputType.Password" Label="Password" HelperTextOnFocus="true" Variant="Variant.Text" />
                    </div>
                    <div class="text-right p-t-90">
                        <a class="txt1" href="ForgetPassword" style="color: #fff; font-weight: normal;">
                            Forgot Password?
                        </a>
                    </div>
                    <div class="text-center container-login100-form-btn text-lg-start mt-4 pt-2">
                        <MudButton Variant="Variant.Filled" Disabled="@Loading" @onclick="@ValidateLogin" Size="Size.Medium" Class="ma-2 w-100 mud-fab btn login-btn" EndIcon="@Icons.Material.Sharp.Login" style="box-shadow: none;">
                            @if (Loading)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Loading</MudText>
                            }
                            else
                            {
                                @*<MudButton class="btn login-btn" Variant="Variant.Filled" Color="Color.Dark" StartIcon="@Icons.Material.Filled.Login" Title="Login" IconSize="Size.Small" style="margin:0;"> Sign in</MudButton>*@
                                <MudText>Sign in</MudText>
                            }
                        </MudButton>
                    </div>
                    
                    @* <div class="text-center text-lg-start mt-4 pt-2">
                    <MudButton Variant="Variant.Filled" Disabled="@Loading" ButtonType="ButtonType.Submit" @onclick="@GotoForgotPage" Size="Size.Medium"
                    Class="ma-2 w-100" EndIcon="@Icons.Material.Sharp.Password" Style="border-radius:25px;">
                    @if (_processingForget)
                    {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">Loading</MudText>
                    }
                    else
                    {
                    <MudText>Forget Password?</MudText>
                    }
                    </MudButton>
                    </div>*@
                </form>
                </div>
                </MudCard>
                
            </div>
        </div>
</div>